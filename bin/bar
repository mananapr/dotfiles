#!/usr/bin/env bash
# Uses lemonbar-xft to create a bar

# fetch the colors
source "$HOME/Scripts/colors.sh"


# vars
p="  "
barh="35"
barw="155"
margin="40"


# functions
song() {
	#playing="$(mpc status | grep -o 'playing' )"
    playing="playing"

	if [ "$playing" == "playing" ]; then
		echo "$p$p"
	else
		echo "$p$p"
	fi
}

clock() {
	datetime="$(date "+%a %R")"
	echo "$datetime"
}

wifi() {
    ssid="$(iwgetid wlan0 --raw)"
    echo "$ssid"
}

battery() {
    percent="$(cat /sys/class/power_supply/BAT0/capacity)"
    power="$(cat /sys/class/power_supply/BAT0/status)"
	
	if [[ $power == "Charging" || $power == "Unknown" ]]; then
		echo -n "$percent%"
	else
		if [ $percent -eq 100 ]; then
			echo -n "$percent%"
		elif [ $percent -gt 70 ] ; then
			echo -n "$percent%"
		elif [ $percent -gt 30 ]; then
			echo -n "$percent%"
		else 
			echo -n "$percent%"
		fi
	fi
}


# loops
loop-desktop() {
	while :; do
		echo "%{l}\
		$a3%{A:$HOME/Scripts/popup/calendar.sh &:}$p$(clock)$p%{A}$a2%{r}\
		$a3$p$p$(battery)\
        $(wifi)$p$a2"
		sleep ".2s"
	done |\
	
	lemonbar \
	    -f 'Monaco:size=7' \
	    -g "1366x"$(($barh+5)) \
	    -d \
	    | bash
}

loop-laptop() {
	while :; do
		echo "%{l}\
		$bg$txt$(song)\
		$a1$bgf%{A:$HOME/Scripts/popup/calendar.sh &:}$p$(clock)$p%{A}\
		-\
		$p$(battery)$p\
		%{B#00000000}"
		sleep ".2s"
	done |\
	
	lemonbar \
	    -f 'Monaco:size=7' \
	    -f 'FontAwesome:size=8' \
	    -g "158x"$barh"+"$margin"+"$margin"" \
	    -d \
	    | bash
}


# exec
case "$1" in
    "long")   loop-desktop ;;
    "short")  loop-laptop ;;
esac
